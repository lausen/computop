<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ComputopCreditCardPayment">
        <property name="merchantId" type="string" />
        <property name="transId" type="string" />
        <property name="amount" type="int" />
        <property name="currency" type="string" />
        <property name="mac" type="string" />
        <property name="urlSuccess" type="string" />
        <property name="urlFailure" type="string" />
        <property name="response" type="string" />
        <property name="urlNotify" type="string" />
        <property name="userData" type="string" />
        <property name="capture" type="string" />
        <property name="reqId" type="string" />
        <property name="plain" type="string" />
        <property name="custom" type="string" />
        <property name="expirationTime" type="string" />
        <property name="customField" type="array" />
    </transfer>

    <transfer name="Payment">
        <property name="computopCreditCard" type="ComputopCreditCardPayment" />
    </transfer>

</transfers>